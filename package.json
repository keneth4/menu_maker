{
  "name": "menu-interactivo",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "postinstall": "node ./scripts/patch-parse5-for-jsdom.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "bash ./scripts/test-e2e.sh",
    "test:e2e:local": "playwright test",
    "test:e2e:container": "E2E_GREP= bash ./scripts/container-smoke.sh",
    "test:perf": "bash ./scripts/test-perf.sh",
    "test:perf:container": "bash ./scripts/container-smoke.sh",
    "test:e2e:ui": "playwright test --ui",
    "docker:dev": "docker compose up --build app",
    "docker:preview": "docker compose --profile preview up --build preview",
    "docker:smoke": "./scripts/container-smoke.sh"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/svelte": "^4.0.0",
    "@types/node": "^20.10.0",
    "autoprefixer": "^10.4.16",
    "jsdom": "^27.0.1",
    "postcss": "^8.4.32",
    "svelte": "^4.2.0",
    "svelte-preprocess": "^5.1.3",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.1.0"
  }
}
